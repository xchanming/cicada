{% block sw_order_state_change_modal %}
<sw-modal
    :title="modalTitle"
    class="sw-order-state-change-modal"
    @modal-close="onCancel"
>
    <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
        {% block sw_order_state_change_modal_button_wrapper %}
    <div class="sw-order-state-change-modal__button-wrapper">
        <!-- eslint-disable-next-line sw-deprecation-rules/no-twigjs-blocks -->
                {% block sw_order_state_change_modal_button %}
        <sw-button
            class="sw-order-state-change-modal__button"
            variant="primary"
            size="small"
            @click="onConfirm"
        >
            {{ $tc('sw-order.stateCard.labelSelectStateButton') }}
        </sw-button>
                {% endblock %}
    </div>
        {% endblock %}
</sw-modal>
{% endblock %}
